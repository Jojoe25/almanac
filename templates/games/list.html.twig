{% extends 'base.html.twig' %}

{% block body %}

    <section class="games-list">
        {% for game in games %}
        <article>
            <a href="{{path('games_details', {'id' : game.id}) }}" title="View game's details">
                <img src="{{ asset('img/posters/games/' ~ game.poster ) }}" alt="{{ game.name }}">
            </a>
        </article>
        {% endfor %}
    </section>

{% endblock %}

{% block title %}
The best Retro Games | {{ parent() }}
{% endblock %}

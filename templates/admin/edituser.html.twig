{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}

    <div class="edit-user-container">
        <h1>Modifier un User :</h1>

        <div class="edit-user-form">
            {# je d√©compose l'affichage du formulaire #}
            {{ form_start(userForm) }} {# form start pour ouvrir la balise form #}

            <div class="form-group">
                {{ form_label(userForm.email) }}
                {{ form_widget(userForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group roles-checkboxes">
                {{ form_label(userForm.roles) }}
                {{ form_widget(userForm.roles) }}
            </div>

            <div class="form-group">
                {{ form_widget(userForm.valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(userForm) }} {# form end pour fermer la balise form #}
        </div>
    </div>

{% endblock %}
